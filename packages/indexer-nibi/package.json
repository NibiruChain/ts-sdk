{
  "name": "@nibiruchain/indexer-nibi",
  "description": "GraphQL API client for the Nibiru Chain indexer (heart-monitor)",
  "version": "0.4.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:watch": "tsc --build -w && link-module-alias",
    "build": "tsc --build && link-module-alias",
    "clean": "tsc --build --clean && shx rm -rf coverage *.log junit.xml dist && jest --clearCache",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/unit",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters='jest-junit'",
    "coverage": "jest --coverage",
    "coverage:show": "live-server coverage",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node-fetch": "^2.6.2",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.0-next.3"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  },
  "gitHead": "26f98095718dadc94cc714e63d68c8a8dfa49dbe"
}